<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBuscaCEP.View.BairrosPorCidade">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Estado:"/>
            <Picker x:Name="pck_uf"
                            
                            Title="Selecione o estado desejado:"/>
            
            <Label Text="Cidade:"/>
            <Picker x:Name="pck_cidade"
                            
                            Title="Selecione a cidade desejada:"/>
            <Button Text="Procurar" x:Name="pesquisar_cidade" Clicked="pesquisar_cidade_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>